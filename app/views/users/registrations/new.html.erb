<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>新規会員登録</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label "名前" %>
          (姓)<%= f.text_field :firstname, autofocus: true, class: "name form-control" %>
          (名)<%= f.text_field :lastname, autofocus: true, class: "name form-control" %>
        </div>
        <div class="field">
          <%= f.label "フリガナ" %>
          (姓)<%= f.text_field :kana_firstname, autofocus: true, class: "name form-control" %>
          (名)<%= f.text_field :kana_lastname, autofocus: true, class: "name form-control" %>
        </div>
        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, class: "email form-control" %>
        </div>
        <div class="field">
          <%= f.label :postcode,'郵便番号(ハイフンなし)' %><br />
          <%= f.text_field :postcode, autofocus: true, class: "user_postcode form-control", id: "user_postcode" %>
        </div>
        <div class="field">
          <%= f.label :address,'住所' %><br />
          <%= f.text_field :address, autofocus: true, class: "user_address form-control", id: "user_address" %>
        </div>
        <div class="field">
          <%= f.label :phone_number,'電話番号' %><br />
          <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label "パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password  form-control" %>
        </div>
        <div class="field">
          <%= f.label "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm  form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>