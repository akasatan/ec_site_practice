<h1>会員情報変更画面</h1>

<%= form_with model: current_user,url: users_path, local: true do |f| %>
  <div>
    <%= f.label "名前" %>
    (姓)<%= f.text_field :firstname, autofocus: true, class: "form-control" %>
    (名)<%= f.text_field :lastname, autofocus: true, class: "form-control" %>
  </div>
  <div>
    <%= f.label "フリガナ" %>
    (姓)<%= f.text_field :kana_firstname, autofocus: true, class: "form-control" %>
    (名)<%= f.text_field :kana_lastname, autofocus: true, class: "form-control" %>
  </div>
  <div>
    <%= f.label :postcode,'郵便番号(ハイフンなし)' %><br />
    <%= f.text_field :postcode, autofocus: true, class: "form-control", id: "user_postcode" %>
  </div>
  <div>
    <%= f.label :address,'住所' %><br />
    <%= f.text_field :address, autofocus: true, class: "form-control", id: "user_address" %>
  </div>
  <div>
    <%= f.label '電話番号' %><br />
    <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
  </div>
  <div>
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
  <div>
    <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
  </div>
<% end %>