<h1>管理者用商品一覧</h1>
<table class="table">
<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.is_valid %></td>
    <td><%= link_to "削除する", product_path(product), method: delete %></td>
  </tr>
<% end %>
</table>